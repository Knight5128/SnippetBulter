<Window x:Class="SnippetButler.Windows.WebViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:local="clr-namespace:SnippetButler.Windows"
        mc:Ignorable="d"
        Title="Snippet Butler" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False" Topmost="True"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <wv2:WebView2 x:Name="webView" 
                     DefaultBackgroundColor="#f5f5f5"
                     WebMessageReceived="WebView_WebMessageReceived"
                     CoreWebView2InitializationCompleted="WebView_CoreWebView2InitializationCompleted"/>
        
        <ProgressBar x:Name="progressBar" IsIndeterminate="True" Height="4" 
                    VerticalAlignment="Top" Background="Transparent" 
                    Foreground="#4a89dc" BorderThickness="0" />
    </Grid>
</Window> 