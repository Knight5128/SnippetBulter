<Application x:Class="SnippetButler.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:local="clr-namespace:SnippetButler"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 应用程序样式资源 -->
            </ResourceDictionary.MergedDictionaries>
            <!-- 托盘图标 -->
            <tb:TaskbarIcon x:Key="NotifyIcon"
                          IconSource="/Resources/AppIcon.ico"
                          ToolTipText="Snippet Butler">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="打开管理面板" Click="OpenManager_Click" />
                        <Separator />
                        <MenuItem Header="退出" Click="Exit_Click" />
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </ResourceDictionary>
    </Application.Resources>
</Application> 